<header class="header">
	{{> logo}}
	<nav class="header_nav_right">
		{{> nav list=header}}
	</nav>
</header>

<main class="main">
	<div class="messages">
		{{#with messages}}
			<h1 class="messages_title">{{title}}</h1>
			<div class="messages_list">
				{{#each list}}
					<div class="list_item">
						<strong class="list_item_title">{{name}}</strong>
						<p class="list_item_text">{{message}}</p>
						<span class="list_item_day">{{day}}</span>
					</div>
				{{/each}}
			</div>
			<a href="#" class="messages_link">All messages</a>
		{{/with}}
	</div>
	<form class="form">
		{{#with form}}
			<h2 class="form_title">{{title}}</h2>
			<div class="form_input_list">
				{{#each inputs}}
					<input id="form-input-{{id}}" name="{{name}}" placeholder="{{placeholder}}" type="{{type}}"
						class="form_input">
				{{/each}}
			</div>
			<div class="form_checkbox">
				<input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
				<div></div>
				<label for="{{checkbox.name}}">{{checkbox.label}}</label>
			</div>
			<button type="submit" class="form_button">{{button}}</button>
			<p class="form_info">{{info}}</p>
		{{/with}}
	</form>
</main>

<section class="advantages">
	{{#each advantages}}
		<div>
			<strong>{{title}}</strong>
			<p>{{text}}</p>
		</div>
	{{/each}}
</section>

<footer class="footer">
	<div class="copyright">
		{{> logo}}
		<span class="copyright_text">
			Copyright 2023-2024
		</span>
	</div>
	{{#each footer}}
		<div>
			<span class="footer_title">
				{{title}}
			</span>
			{{> nav list=links isVertical=true isLight=true}}
		</div>
	{{/each}}
</footer>